<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Vertical button menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Students"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTeachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teachers"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCreateCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Course"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnStudentCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Courses"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAssignTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign Teacher to Course"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnViewCourseStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Course Info"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <!-- Bottom half fragment container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eeeeee"/>
</LinearLayout>
